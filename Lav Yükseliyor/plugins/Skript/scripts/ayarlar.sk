#
# Spawn Ayarlama
#

on first login:
    teleport player to {setilkbaslangic}

on login:
    teleport player to {setbaslangic}

command /setlav:
    trigger:
        player has the permission "baslangic.admin"
        set {setbaslangic} to location of player
        send "&aAnkSOFT &7► &eBaslangic Yeri Ayarlandi" to player
      
command /setilklav:
    trigger:
        player has the permission "ilkbaslangic.admin"
        set {setilkbaslangic} to location of player
        send "&aAnkSOFT &7► &eIlk Baslangic Yeri Ayarlandi" to player
		
